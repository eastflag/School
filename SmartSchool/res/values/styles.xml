<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <style name="TransDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@+android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@+android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#FFBFBFBF</item>
    </style>
    
    <style name="InputBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/input</item>
        <item name="android:textColor">#5a6378</item>
        <item name="android:textSize">14dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>
    
    <style name="Button_woodred">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_back_red</item>
    </style>
    
    <style name="Button_woodred_fixed">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_back_red</item>
    </style>
    
    <style name="Dialog_Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">#FFC8C8C8</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#930D03</item>
        <item name="android:textSize">20dp</item>
		<item name="android:textStyle">bold</item>
    </style>

    <style name="HeathItemTitleTxt">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="HeathItemContentMain_A">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="HeathItemContentMain_B">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="HeathItemContentSub">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
